<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.student.mapper.TeacherMapper">

    <select id="selectByCondition" resultType="cn.codnoy.student.entity.Teacher">
        SELECT * FROM teachers
        WHERE deleted = 0
        <if test="query.name != null and query.name != ''">
            AND name LIKE CONCAT('%', #{query.name}, '%')
        </if>
        <if test="query.gender != null and query.gender != ''">
            AND gender = #{query.gender}
        </if>
        <if test="query.department != null and query.department != ''">
            AND department = #{query.department}
        </if>
        <if test="query.title != null and query.title != ''">
            AND title = #{query.title}
        </if>
        ORDER BY hire_date DESC
    </select>

</mapper>